<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorBlanco"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgEmpleado"
            android:orientation="vertical">
            <co.kubo.indiesco.utils.Medium
                style="@style/texto_20_morado"
                android:text="Encargado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <co.kubo.indiesco.utils.Regular
                android:id="@+id/txtNombreEmpladoCalificarHist"
                style="@style/texto_15_gris"
                android:textSize="18dp"
                android:text="Pepito perez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEmpleadoHist"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_placeholder"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </RelativeLayout>

    <co.kubo.indiesco.utils.Medium
        style="@style/texto_20_morado"
        android:text="CalificaciÃ³n:"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <co.kubo.indiesco.utils.Regular
            android:id="@+id/txtCalificacionHist"
            style="@style/texto_15_gris"
            android:textSize="18dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <co.kubo.indiesco.utils.Regular
            style="@style/texto_15_gris"
            android:textSize="18dp"
            android:text="/5"
            android:drawableRight="@drawable/ic_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/borde_gris"></View>

</LinearLayout>