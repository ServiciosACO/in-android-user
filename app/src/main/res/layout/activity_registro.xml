<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:visibility="visible"
        android:id="@+id/scrollViewRegistro"
        android:layout_weight="1"
        android:background="@color/fondo_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="19sp"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgBotonVolver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/btn_atras" />
                <co.kubo.indiesco.utils.Medium
                    android:id="@+id/tvTituloHeader"
                    style="@style/texto_20_morado"
                    android:layout_marginLeft="35sp"
                    android:text="Registro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <co.kubo.indiesco.utils.Bold
                    android:gravity="center"
                    android:layout_marginTop="47sp"
                    style="@style/texto_22_morado"
                    android:text="Vamos a crear una cuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/imgFoto"
                    android:src="@drawable/registro_foto"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editNombre"
                    android:hint="Nombre"
                    android:gravity="center"
                    style="@style/texto_15_gris"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:textColorHint="@color/color_hint"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="27sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/colorVerdeCursor" />
                <EditText
                    android:id="@+id/editEmail"
                    android:hint="Correo electrónico"
                    style="@style/texto_15_gris"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:gravity="center"
                    android:textColorHint="@color/color_hint"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="27sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/colorVerdeCursor" />
                <EditText
                    android:id="@+id/editCelular"
                    android:hint="Teléfono celular"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="number"
                    style="@style/texto_15_gris"
                    android:gravity="center"
                    android:textColorHint="@color/color_hint"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="27sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/colorVerdeCursor" />
                <EditText
                    android:id="@+id/editDireccion"
                    android:hint="Dirección"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    style="@style/texto_15_gris"
                    android:gravity="center"
                    android:textColorHint="@color/color_hint"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="27sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/colorVerdeCursor" />

                <EditText
                    android:id="@+id/editComplemento"
                    android:hint="Complemento de la dirección"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    style="@style/texto_15_gris"
                    android:gravity="center"
                    android:textColorHint="@color/color_hint"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="27sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/colorVerdeCursor" />


                <RelativeLayout
                    android:id="@+id/fondoMapaDir"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginBottom="27sp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorBlanco">
                    <fragment
                        android:id="@+id/mapaDireccion"
                        class ="com.google.android.gms.maps.MapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <EditText
                    android:id="@+id/editCiudad"
                    android:hint="Ciudad"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    style="@style/texto_15_gris"
                    android:gravity="center"
                    android:textColorHint="@color/color_hint"
                    android:layout_marginRight="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/colorVerdeCursor" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputPass1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/color_hint"
                    android:hint="Contraseña"
                    app:hintEnabled="true"
                    app:passwordToggleDrawable="@drawable/icon_selector"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorGris">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editpass1"
                        android:layout_marginRight="40sp"
                        android:layout_marginLeft="40sp"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        style="@style/texto_15_gris"
                        android:textCursorDrawable="@color/colorVerde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputPass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorBlanco"
                    app:passwordToggleDrawable="@drawable/icon_selector"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorGris">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editpass2"
                        android:inputType="textPassword"
                        android:layout_marginRight="40sp"
                        android:layout_marginLeft="40sp"
                        android:layout_marginBottom="65sp"
                        android:hint="Repita contraseña"
                        android:gravity="center"
                        android:imeOptions="actionGo"
                        style="@style/texto_15_gris"
                        android:textCursorDrawable="@color/colorVerde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSiguiente"
        android:visibility="visible"
        android:elevation="4sp"
        app:fabSize="auto"
        android:fitsSystemWindows="true"
        android:fadeScrollbars="true"
        android:src="@drawable/btn_done"
        android:layout_marginVertical="@dimen/fab_margin"
        android:layout_marginHorizontal="@dimen/fab_margin"
        app:backgroundTint="@color/color_hint"
        android:layout_gravity="right|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llSplashRegistro"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/img_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <co.kubo.indiesco.utils.Regular
                android:layout_marginTop="32sp"
                android:gravity="center"
                android:text="@string/registro_splash_final"
                style="@style/texto_15_gris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>