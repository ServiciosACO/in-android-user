<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <co.kubo.indiesco.utils.Bold
        style="@style/texto_18_red"
        android:text="Cocina"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMinus0"
            android:layout_marginEnd="28dp"
            android:background="@drawable/boton_borde_gris"
            android:src="@drawable/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <co.kubo.indiesco.utils.Regular
            style="@style/texto_15_gris"
            android:textColorHint="@color/color_hint"
            android:gravity="center"
            android:layout_weight="1"
            android:hint="0"
            android:background="@color/transparente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgPlus0"
            android:layout_marginStart="28dp"
            android:background="@drawable/boton_borde_gris"
            android:src="@drawable/btn_add2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>