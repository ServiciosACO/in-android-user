<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="colorControlNormal">@color/color_hint</item>
        <item name="colorControlActivated">@color/colorEstrellaActiva</item>
    </style>

    <style name="CustomTextAppearanceHeader" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/colorNaranja</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextAppearanceDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/my_date_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomTextAppearanceWeekDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/colorMorado</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RatingBarSmall" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/color_hint</item>
        <item name="colorControlActivated">@color/colorEstrellaActiva</item>
    </style>

    <style name="ThemeTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/colorNegro</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="FullScreen" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

